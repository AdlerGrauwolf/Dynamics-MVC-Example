@model IEnumerable<MVCTest.WebSiteUI.Models.ContactModel>

<div class="gridContainer">
    <table class="table table-hover">
        @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.CheckBox("checkboxContacts[]", new { id = item.Id, value = item.FullName, onclick = "disableOtherCheckbox($(this), $(this).attr('name'))" })
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    No se han encontrado registros, favor de ampliar sus parámetros de búsqueda.
                </td>
            </tr>
        }
    </table>
</div>