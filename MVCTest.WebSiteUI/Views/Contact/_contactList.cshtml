@model IEnumerable<MVCTest.WebSiteUI.Models.ContactModel>

<div class="contactContainer">
    <div class="lead text-info containerHeader">
        Contactos
        @*@Html.DisplayNameFor(model => model.FullName)*@
    </div>
    <div class="gridContainer">
        <table class="table table-hover">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td width="80%">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td align="center">
                            <div class="inLineBlock btn btn-info btn-xs" onclick="editContact('@item.Id')"><i class="glyphicon glyphicon-pencil"></i></div>
                            <div class="inLineBlock btn btn-danger btn-xs" onclick="DeleteContactMessage('@item.Id', '@item.FullName')"><i class="glyphicon glyphicon-trash"></i></div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        No se han encontrado registros, favor de verificar su parámetro de búsqueda.
                    </td>
                </tr>
            }
        </table>
    </div>
</div>